<%- include("../partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Post</div>
    <form action="/BlitzPosts/<%= post._id  %>?_method=PUT" method="POST" class="ui form">
      <div class="field">
        <label>Title</label>
        <input type="text" value="<%= post.title %>" name="post[title]">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" value="<%= post.image %>" name="post[image]"> 
      </div>
      <div class="field">
        <label>Post</label>
        <textarea id="postbody" name="post[description]" ><%= post.description %>"</textarea>
      </div>
      <button class="field ui pink basic button btn-block">UPDATE</button>
    </form>
</div>
 
<%- include("../partials/footer") %>
