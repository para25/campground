<%- include("../partials/header") %>
    <div class="container">
        <div class="ui main text container segment">
            <div class="ui huge header">Add Campground</i>
            </div>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Enter name of the place" required>
                </div>

                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="url" id="ImageUrl" placeholder="https://imageurl.com" required>
                    <small>Copy Image Addresss and paste it here</small>
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="100" step="100" min="0" required>
                    <small>Enter the cost per night in Indian rupees</small>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA" required>
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea class="form-control" id="description" placeholder="Describe these Camp!" name="description" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">ADD</button>
            </form>
            <a style="margin-top: 2%;" class="ui red floated basic button" href="/campgrounds">
                <i id="backicon" class="chevron circle left icon"></i> Discard
            </a>
        </div>
    </div>

    </div>


    </div>
